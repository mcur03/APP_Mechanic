{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                                
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,            
    "strict": true,     
    "esModuleInterop": true,                                 
    "skipLibCheck": true,   
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true                        
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
